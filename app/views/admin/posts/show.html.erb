<div class='container'>
    <h3>　投稿詳細</h3><br>
    <div class='row'>
        <p id="notice"></p>
        <div class="col-xl-5">
            <%= image_tag @post.image, size: '340x260' if @post.image.attached? %>
        </div>
            <div class="col-xl-7">
                <div align="center">
                    <table>
                        <tr>
                            <th><h4>写真</h4></th>
                            <th><%= @post.image %></th>
                        </tr>
                        <tr>
                            <th><h4>説明</h4></th>
                            <th><%= @post.introduction %></th>
                        </tr>
                        <tr>
                            <th><h4>タグ</h4></th>
                            <th><%= @post.tag_maps %></th>
                        </tr>
                    </table><br>
                    <%= link_to '編集する', edit_admin_post_path(@post.id), class: "btn btn-lg btn-outline-success edit_item_#{@post.id}" %>
                </div>
            </div>
        </div>
    </div>
</div>