<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-7 mx-auto mt-5">
      <h3 class="text-center mt-5 mb-4">新規登録</h3>
      
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "customer/shared/error_messages", resource: resource %>
            
          <div class="form-group">
           <div class="row">
            <div class="col-md-3">名前</div>
             <div class="col-md-9 hurigana">
              <%= f.label :"(姓)", class: "user_registration__name_label" %>
              <%= f.text_field :first_name, autofocus: true, autocomplete: "姓" ,class:"form-control user_registration__name_input" %>
              <%= f.label :"(名)", class: "user_registration__name_label" %>
              <%= f.text_field :last_name, autofocus: true, autocomplete: "名" ,class:"form-control user_registration__name_input" %>
             </div>
           </div>  
          </div>
          
          <div class="form-group">
           <div class="row">
            <div class="col-md-3">フリガナ</div>
             <div class="col-md-9 hurigana">
              <%= f.label :"(セイ)", class: "user_registration__name_label" %>
              <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "セイ" ,class:"form-control user_registration__name_input" %>
              <%= f.label :"(メイ)", class: "user_registration__name_label" %>
              <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "メイ" ,class:"form-control user_registration__name_input" %>
             </div>
           </div>  
          </div>
          
          <div class="form-group">
           <div class="row">
            <div class="col-md-3">ニックネーム</div>
             <div class="col-md-9">
              <%= f.text_field :nickname, autofocus: true, autocomplete: "ニックネーム" ,class:"form-control" %>
             </div>
           </div>  
          </div>
          
          <div class="form-group">
           <div class="row">
            <div class="col-md-3">メールアドレス</div>
             <div class="col-md-9">
               <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control" %>
             </div>
           </div>  
          </div>
          
          <div class="form-group">
           <div class="row">
            <div class="col-md-3">パスワード</br>※6文字以上</div>
             <div class="col-md-9">
              <% if @minimum_password_length %><% end %>
              <%= f.password_field :password, autocomplete: "new-password" ,class:"form-control" %>
             </div>
           </div>  
          </div>

          <div class="form-group">
           <div class="row">
            <div class="col-md-3">パスワード</br>※確認用</div>
             <div class="col-md-9">
              <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class:"form-control" %>
             </div>
           </div>  
          </div>
          
          <div class="row">
           <div class="offset-0 offset-md-3 col-md-9">
            <div class="actions">
             <%= f.submit "Sign up", class: 'btn btn-secondary btn-block' %>
            </div>
             <%= render "customer/shared/links", class: 'btn btn-secondary btn-block' %>
           </div>
          </div>
       <% end %>
      
   </div>
  </div>
 </div>
</div>
