<div class="container px-5 px-sm0">
   <div class="row">
    <div class="col-md-2">
    <%= render partial: '/customer/posts/tag', locals: { customer: @customer } %>
    </div>
    
    <div class="col-md-8 offset-md-1"> 
     <div class="row justify-content-center">
       <div class="card-deck">
        <% @posts.each do |post| %>
         <div class="col-12 col-md-6 col-lg-4 text-card-container">
          <div class="card content-card border-dark">
           <div class="card-header p-0">
            <img class="card-img-top" src="image_tag post.image">
             <%= post.customer.nickname %>
             <%= link_to customer_post_path(post.id) do %>
              <%#= post.introduction %>
                <%#= image_tag post.image, size: "200x200" %>
                <div class="card-body d-flex align-items-center">
                 <p class="card-title text-left">Card title</p>
                 </div>
                 
                <% end %>
                </div>
                </div>
                </div>
         
          
          <%#= image_tag post.image, size: '340x260' if post.image.attached? %>
       <% end %>
<%# end %>
</div>
</div>
    </table>
    </div>