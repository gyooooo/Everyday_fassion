<div class="container">
 <div class="row">
  <div style="width: 600px; margin: auto;">
   <div class='post-card-contents'>
    <table class="table table-hover table-inverse">
     <% @all_ranks.each.with_index(1) do |post, i| %>
      <h1>　</h1>
      <div style="text-align: center">
       第<%= i %>位
       <h5>　</h5>
      </div>
       <ul class='post-lists'>
        <%= link_to customer_post_path(post.id) do %>
         <div class="shadow p-3 mb-5 bg-white rounded">
          <div class="card">
           <div class="card-body">
            <h5 class="card-title"><%= image_tag post.customer.get_profile_image(70,70) %><%= post.customer.nickname %></h5>
            <p class="card-text"><small class="text-muted"><%= post.created_at %></small></p>
           </div>
            <%= image_tag post.image, size: "500x500" if post.image.attached? %>
          </div>
         </div>
        <% end %>
       </ul>
     <% end %>
    </table>
   </div>
  </div>
 </div>
</div> 