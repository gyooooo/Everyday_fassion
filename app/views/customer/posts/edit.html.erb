<div class="container">
  <div class="row">
    <div class="cpl-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h2>投稿編集</h2>
     <% if @post.errors.any? %>
     <%= @post.errors.count %>error prohibited this obj from being saved:
      <ul>
      <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
      </ul>
    <% end %>

    <%= form_with model: @post,url: customer_post_path do |f| %>
    <div class="form-group">
     <label for="image">Title</label>
     <%= f.file_field :image ,class: "form-control image" %>
    </div>
  
    <div class="form-group">
     <label for="book_opinion">Opinion</label>
     <%= f.text_area :introduction ,class: "form-control book_body"  %>
    </div>
    
     <div class="field">
        <%= f.label"タグ (スペースで区切ると複数タグ登録できます)" %>
        <%= f.text_field :tag_name, value: @tag_list,class:"form-control"%>
   　</div>
  
    <div class="form-group">
      <%= f.submit 'Update Book', class: "btn btn-success" %>
    </div>
    <% end %>
    
    <%= link_to "Show", customer_post_path(@post.id) %>

   </div>
  </div>
</div>