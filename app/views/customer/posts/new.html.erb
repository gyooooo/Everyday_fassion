<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-7 mx-auto">
    
    <% if @post.errors.any? %>
     <% @post.errors.full_messages.each do |message| %>
      <li>
       <ul><%= message %></ul>
      </li>
     <% end %>
    <% end %>
    
     <h3 class="text-center mt-5 mb-4">新規投稿</h3>
     
       <%= form_with model: @post,url: '/customer/posts', method: :post do |f| %>
         <div class="form-group">
          <div class="row">
           <div class="col-md-3">
            <i class="fas fa-camera-retro"></i> 写真
           </div>
           <div class="col-md-9">
            <%= f.file_field :image, accept: "image/*" %>
           </div>
          </div>
         </div>
         
         <div class="form-group">
          <div class="row">
           <div class="col-md-3">
            <i class="fas fa-pencil-alt"></i> 本文
           </div>
           <div class="col-md-9">
            <%= f.text_area :introduction, class: 'form-control' %>
           </div>
          </div>
         </div>
         
         <div class="form-group">
          <div class="row">
           <div class="col-md-3">
            <i class="fas fa-tags"></i> ハッシュタグ
           </div>
           <div class="col-md-9">
            <%= f.text_field :tag_name, class: 'form-control' , placeholder: "Ruby Python Java" %>
            <small>スペースを入力することで複数のタグを付けることができます。</small>
           </div>
          </div>
         </div>
         
         <div class="row">
          <div class="offset-0 offset-md-3 col-md-9">
           <div class="form-group">
            <%= f.submit '投稿', class: 'btn btn-secondary btn-block' %>
           </div>
          </div>
         </div>
       <% end %>
      
   </div>
  </div>
 </div>
</div>