<% if post.favorited_by?(current_customer) %>
    <%= link_to customer_post_favorites_path(post), method: :delete, remote: true do %>
      ♥<%= post.favorites.count %> いいね
    <% end %>
  <% else %>
    <%= link_to customer_post_favorites_path(post), method: :post, remote: true do %>
      ♡<%= post.favorites.count %> いいね
    <% end %>
<% end %>