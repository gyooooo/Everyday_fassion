

<div class="container px-5 px-sm0">
   <div class="row">
    <div style="width: 600px; margin: auto;" class="css-table">
     <h1>ã€€</h1>
     <div class="row justify-content-center">
      <% @posts.each do |post| %>
       <%= link_to customer_post_path(post.id) do %>
        <div class="shadow p-3 mb-5 bg-white rounded">
        <div class="card">
         <div class="card-body">
          <h5 class="card-title"><%= image_tag post.customer.get_profile_image(70,70) %><%= post.customer.nickname %></h5>
          <p class="card-text"><small class="text-muted"><%= post.created_at %></small></p>
         </div>
         <%= image_tag post.image, size: "600x600" if post.image.attached? %>
         </div>
        </div>
       <% end %>
      <% end %>
     </div>
    </div>