<% unless current_customer == customer %>
  <% if current_customer.following?(customer) %>
    <% relationship = current_customer.relationships.find_by(follow_id: customer.id) %>
    <%= form_with model:relationship, url: customer_relationship_path(relationship),html: { method: :delete } do |f| %>
      <%= hidden_field_tag :follow_id, customer.id %>
      <%= f.submit class: 'btn btn-danger btn-block' do %>
      <i class="fas fa-user-slash"></i>フォローを外す
      <% end %>
    <% end %>
  <% else %>
    <%= form_with model:current_customer.relationships.build, url: customer_relationships_path do |f| %>
      <%= hidden_field_tag :follow_id, customer.id %>
      <%= f.submit class: 'btn btn-primary btn-block' do %>
      <i class="fas fa-user-plus"></i>フォローする
      <% end %>
    <% end %>
  <% end %>
<% end %>