<div class="container">
 <div class="row">
  <div class="order-1 order-lg-0 col-lg-4 mt-5 mt-lg-0 about-box">
   <%= render partial: '/customer/customers/form', locals: { customer: @customer } %>
  </div>
  
   <div class="order-0 order-lg-1 col-lg-8 mt-5"> 
      <div class="row justify-content-center">
       <% @posts.each do |post| %>
        <%= link_to customer_post_path(post.id) do %>
          <div class="shadow p-3 mb-5 bg-white rounded">
           <div class="card">
            <div class="card-body">
             <p class="card-text"><small class="text-muted"><%= post.created_at %></small></p>
            </div>
             <%= image_tag post.image, {class: "card_image"} if post.image.attached? %>
           </div>
         </div>
        <% end %>
       <% end %>
      </div>
     </table>
    </div>
   </div>
 </div>