<div class="container">
  <div class="row">
  <div class="col-md-12">
  <div class="center-align">
  <h1>　</h1>
  <div style="text-align: center">
<h3>会員情報編集</h3>
</div>
<div style="width: 800px; margin: auto;">
  <%= form_with model: @customer, url: customer_customer_path(@customer) do |f| %>
   <table class="row table">
    <tr>
      <th><%= f.label :プロフィール写真 %></th>
      <th><%= f.file_field :profile_image %></th>
      <th></th>
    </tr>
    
    <tr>
      <th><%= f.label :氏名 %></th>
      <th><%= f.text_field :first_name, class:"form-control" %></th>
      <th><%= f.text_field :last_name, class:"form-control" %></th>
    </tr>
     
    <tr>
      <th><%= f.label :フリガナ %></th>
      <th><%= f.text_field :first_name_kana, class:"form-control" %></th>
      <th><%= f.text_field :last_name_kana,class:"form-control" %></th>
    </tr>

    <tr>
      <th><%= f.label :ニックネーム %></th>
      <th><%= f.text_field :nickname, class:"form-control" %></th>
      <th></th>
    </tr>
    
    <tr>
      <th><%= f.label :メールアドレス %></th>
      <th><%= f.text_field :email, class:"form-control" %></th>
      <th></th>
    </tr>
    </div>
    
        <div style="text-align: center">
    <div class="form-group">
      <th><input type="submit" name="commit" value="編集内容を保存" class="btn btn-outline-dark" data-disable-with="Update Customer"></th>
      <th><%= link_to customer_customers_unsubscribe_path(current_customer) do %>
           <button type="button" class="btn btn-outline-dark">退会する</button>
          <% end %>
          <th></th>
      </th>
      </
      </div>
   </table>
  <% end %>
  </div>
  </div>
  </div>
</div>